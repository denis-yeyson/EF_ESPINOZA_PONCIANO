<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OpcionesActivity">

    <Button
        android:id="@+id/buttonCrud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Ejemplo CRUD    "/>

    <Button
        android:id="@+id/buttonI1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Implicito 1"/>
    <Button
        android:id="@+id/buttonI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Implicito 2" />
    <Button
        android:id="@+id/buttonI3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:text="Intent Implicito 3" />

    <Button
        android:id="@+id/buttonE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Explicito 1"/>
    <Button
        android:id="@+id/buttonE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Explicito 2" />
    <Button
        android:id="@+id/buttonE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Explicito 3" />

</LinearLayout>